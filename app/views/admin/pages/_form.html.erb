<section class="form">
  <%= form_for [:admin, @page] do |f| %>
    <ul class="select">
      <label>Mother</label>
      <%= f.collection_select :mother, @collection, :id, :title, include_blank: true %>
    </ul>
    <ul class="text-field">
      <label>Title</label>
      <%= f.text_field :title, placeholder: "Insert page title here" %>
    </ul>
    <ul class="text-area">
      <label>Content</label>
      <%= f.text_area :content, placeholder: "Insert content page here" %>
    </ul>
    <ul class="submit">
      <%= f.submit "Publish" %>
    </ul>
  <% end %>
</section>

