<section class="form col-md-10">
  <%= form_for [:admin, @post] do |f| %>
    <ul class="select">
      <label>Page</label>
      <%= f.collection_select :page_id, @pages, :id, :title, include_blank: true, class: "form-control" %>
    </ul>
    <ul class="text-field">
      <label>Title</label>
      <%= f.text_field :title, class: "form-control", placeholder: "Insert post title here" %>
    </ul>
    <ul class="text-area">
      <label>Content</label>
      <%= f.text_area :content, class: "form-control", placeholder: "Insert content post here" %>
    </ul>
    <ul class="submit">
      <%= f.submit "Publish", class: "btn btn-primary" %>
    </ul>
  <% end %>
</section>

